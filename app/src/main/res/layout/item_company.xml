<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCompany"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- 企业图标 -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_building"
            android:background="@drawable/bg_logo_circle"
            android:padding="12dp"
            android:contentDescription="企业图标"/>

        <!-- 企业信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿农生态科技股份有限公司"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"/>

            <TextView
                android:id="@+id/tvCompanyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="已加入"
                android:textSize="14sp"
                android:textColor="#4CAF50"/>

        </LinearLayout>

        <!-- 选中图标 -->
        <ImageView
            android:id="@+id/ivCheckIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:background="@drawable/bg_check_circle"
            android:padding="4dp"
            android:contentDescription="已选中"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
